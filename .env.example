# ============================================
# REQUIRED: Copy to .env and fill these
# ============================================

# Your Roam graph credentials (from Settings > Graph > API Tokens)
ROAM_GRAPH_NAME=your-graph
ROAM_API_TOKEN=roam-graph-token-xxxxx

# VoyageAI API key (from https://www.voyageai.com)
# Used for embeddings and reranking
VOYAGEAI_API_KEY=sk-your-voyage-key

# ============================================
# WEAVIATE: Choose Local OR Cloud
# ============================================

# Option A: Local Weaviate (default - runs in Docker)
WEAVIATE_HTTP_HOST=weaviate
WEAVIATE_GRPC_HOST=weaviate
CHUNKER_SERVICE_URL=http://chunker:8003

# Option B: Weaviate Cloud (comment out Option A, uncomment these)
# Sign up at https://console.weaviate.cloud/
# When using cloud, omit --profile local-weaviate from docker compose commands
# WEAVIATE_CLOUD_URL=https://your-cluster.weaviate.network
# WEAVIATE_CLOUD_API_KEY=your-weaviate-cloud-api-key
# WEAVIATE_HTTP_HOST=your-cluster.weaviate.network
# WEAVIATE_GRPC_HOST=your-cluster.weaviate.network
# CHUNKER_SERVICE_URL=http://chunker:8003

# ============================================
# OPTIONAL: Advanced tuning
# ============================================

# Chunker configuration (defaults are fine for most users)
# voyageai = API-based, low memory (~150-250MB), recommended for Render/cloud deployments
# granite = Local model, high memory (~600-900MB), faster but requires more RAM
CHUNKER_EMBEDDING_PROVIDER=voyageai
CHUNKER_VOYAGE_MODEL=voyage-3-lite
CHUNKER_CONCURRENCY=1
CHUNKER_GROUP_SIZE=16
# For local granite model (not recommended for cloud):
# CHUNKER_EMBEDDING_PROVIDER=granite
# CHUNKER_MODEL=ibm-granite/granite-embedding-small-english-r2

# Sync state persistence
SEMANTIC_SYNC_DB=backend/data/semantic_sync.db

# Auto-sync scheduler (optional - runs sync on schedule)
AUTO_SYNC_ENABLED=false
AUTO_SYNC_TIME=02:00  # Time in 24-hour format (uses system local timezone)
